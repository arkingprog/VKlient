<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent">
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25px"
    android:paddingBottom="25px">
    <ImageView
        android:id="@+id/imageWall"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:paddingLeft="25px"
        android:paddingRight="16px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textColor="@color/vk_black"
        android:id="@+id/textNamePost"
        android:layout_row="0"
        android:layout_column="1"
        android:focusable="false" />

    <TextView
        android:textColor="@color/vk_black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:id="@+id/textDatePost"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:textColor="@color/vk_black"

        android:paddingLeft="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Texsddddddddddddddddddddddddddt"
        android:id="@+id/textPost"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:layout_column="0" />
    <Button  android:id="@+id/btnLikeWall"/>
</GridLayout>
</LinearLayout>